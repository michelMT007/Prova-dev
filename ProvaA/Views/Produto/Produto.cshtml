@model List<ProvaA.ViewModels.ProdutoViewModel>

@{
    ViewBag.Title = "Produtos";
    Layout = "~/Views/Shared/_Layoutmac.cshtml";
}
<h2>Produtos</h2>
<div>
    <table class="dados-os table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Identificador</th>
                <th>Categoria</th>
                <th>Código</th>
                <th>Descrição</th>
                <th>Ativo</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var prod in Model)
            {
                <tr>
                    <td>@prod.Id</td>
                    <td>@prod.CodigoBarras</td>
                    <td>@prod.NomeProduto</td>
                    <td>@prod.DescricaoProduto</td>
                    <td>@prod.Ativo</td>
                    <td>@prod.Valor</td>
                    <td>@prod.QuantidadeEstoque</td>
                </tr>
            }
        </tbody>
    </table>
    <div class="modal-footer">
        <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">Adicionar nova Categoria</button>
    </div>
</div>
