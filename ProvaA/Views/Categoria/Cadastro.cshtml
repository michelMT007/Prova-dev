@model  IEnumerable<ProvaA.ViewModels.CategoriaViewModel>

@{
    ViewBag.Title = "Cadastro";
    Layout = "~/Views/Shared/_Layoutmac.cshtml";
}

<h2>Cadastro de Categorias de Proodutos</h2>
<div class="modal fade" id="NovaCategoria">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" data-dismiss="modal" class="close">
                    <span>&times;</span>
                </button>
                <h4 class="modal-title">Nova Categoria</h4>
            </div>
            <form>
                <div class="modal-body">
                    <div class="row">
                        <div class="form-group col-xs-12">
                            <label class="control-label">Código da OS</label>
                            <p class="form-control-static">65151</p>
                        </div>
                    </div>
                    <div class="row">
                        
                        <div class="form-group has-warning col-sm-7">
                            <label class="control-label" for="Servicos">Serviços</label>
                            <select id="Servicos" class="form-control">
                                <option value="">Selecione...</option>
                                <option value="1">Ajuste de Data/Hora</option>
                                <option value="2">Conserto de Engrenagem</option>
                                <option value="3">Troca de Bateria</option>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group has-error col-xs-12">
                            <label class="control-label" for="Observacao">Observação</label>
                            <textarea id="Observacao" class="form-control" rows="3"></textarea>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group has-success col-sm-4">
                            <label class="control-label" for="Valor">Valor</label>
                            <div class="input-group">
                                <div class="input-group-addon">R$</div>
                                <input type="text" name="valor" id="Valor" class="form-control">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="reset" class="btn btn-danger">Limpar</button>
                    <button type="submit" class="btn btn-primary">Salvar</button>
                </div>
            </form>
        </div>
    </div>
</div>  