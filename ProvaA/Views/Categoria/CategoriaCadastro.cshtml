@model  ProvaA.ViewModels.CategoriaViewModel
@{
    ViewBag.Title = "Categoria";
    Layout = "~/Views/Shared/_Layoutmac.cshtml";
}
<h2>Cadastro de Categorias de Produtos</h2>
<div>
    <form class="form-group" method="post">
        <div class="form-group row">
            @Html.LabelFor(Model => Model.NomeCategoria)
            @Html.EditorFor(Model => Model.NomeCategoria, new { HtmlAttribute = new { size =300, MaxLength = 15, @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.NomeCategoria, "",new { @class = "text-danger" })       
        </div>
        <div class="form-group row">

            @Html.LabelFor(Model => Model.Descricao)
            @*@Html.EditorFor(Model => Model.NomeProduto, new { HtmlAttribute = new { @class = "form-control" } })*@
            @Html.EditorFor(Model => Model.Descricao, new { HtmlAttribute = new { @class = "form-control", @maxlength = 10} })
            @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })

        </div>
        <div class="form-group row">
            @Html.LabelFor(Model => Model.Ativo)
            @Html.CheckBoxFor(Model => Model.Ativo, new { HtmlAttribute = new { @class = "form-control" } })
            
        </div>
        
        <div class="form-group row">
            <div class="col-sm-10">
                <input type="button" name="cadcategoria" id="salvar" class="btn btn-primary" value="Salvar">
            </div>
        </div>
    </form>
</div>

<script type="text/javascript">
    $('#salvar').click(function () {
        var url = "http://localhost:60498/Categoria/CategoriaCadastro";
        var cat = $("#NomeCategoria").val();
        debugger;
        var desc = $("#Descricao").val();
        var ativo = $("#Ativo").val();

        $.post(url, { NomeCategoria: cat, Descricao: desc, Ativo: ativo }, function (data) {
            $("#msg").html(data);
        });
    })

</script>
